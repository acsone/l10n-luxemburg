<odoo>
    <record model="ir.ui.view" id="ecdf_vat_report_tree">
        <field name="name">ecdf.vat.report.tree</field>
        <field name="model">ecdf.vat.report</field>
        <field name="arch" type="xml">
            <tree string="eCDF VAT Reports">
                <field name="name"/>
                <field name="description"/>
                <field name="period_type"/>
                <field name="year"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ecdf_vat_report_search">
        <field name="name">ecdf.vat.report.search</field>
        <field name="model">ecdf.vat.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="description" filter_domain="[('description', 'ilike', self)]"/>
                <field name="regime" filter_domain="[('regime', 'ilike', self)]"/>
                <field name="company_id" filter_domain="[('company_id.name', 'ilike', self)]"/>
                <field name="agent_id" filter_domain="[('agent_id.name', 'ilike', self)]"/>
                <field name="regime" filter_domain="[('regime', 'ilike', self)]"/>
                <field name="year" filter_domain="[('year', 'ilike', self)]"/>
                <filter string="This year" domain="[('year', '=', datetime.date.today().year)]" help="Declarations for this year"/>
                <filter string="Sales" domain="[('regime', '=', 'sales')]" help="Tax regime : sales"/>
                <filter string="Revenues" domain="[('regime', '=', 'revenues')]" help="tax regime : revenues"/>
                <group expand="0" string="Group by">
                    <filter string="Year" domain="[]" context="{'group_by':'year'}"/>
                    <filter string="Language" domain="[]" context="{'group_by':'language'}"/>
                    <filter string="Month" domain="[]" context="{'group_by':'period_month'}"/>
                    <filter string="Agent" domain="[]" context="{'group_by':'agent_id'}"/>
                    <filter string="Tax Regime" domain="[]" context="{'group_by':'regime'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="ecdf_vat_report_form">
        <field name="name">ecdf.vat.report.form</field>
        <field name="model">ecdf.vat.report</field>
        <field name="arch" type="xml">
            <form string="VAT Report">
                <header>
                    <button name="print_xml" type="object" string="Generate XML" class="oe_highlight" icon="fa-download" help="Download the VAT report in XML format, ready for eCDF"/>
                    <button name="preview" type="object" string="Preview"/>
                </header>
                <sheet>
                    <group>
                        <group name="group_main_information" string="Main Information">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="company_id"/>
                            <field name="language"/>
                        </group>
                        <group name="group_report_options" string="Report options">
                            <field name="agent_id" help="If no agent, company data will be used"/>
                            <field name="year"/>
                            <field name="period_type" readonly="1"/>
                            <field name="period_month" attrs="{'invisible': [('period_type', '!=', 'month')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Manual Input(s)">
                            <group>
                                <field name="regime" widget="radio"/>
                            </group>
                            <field name="manual_ids">
                                <tree editable="0" delete="0" create="0">
                                    <field name="name" readonly="1"/>
                                    <field name="description" readonly="1"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <page string="XML report" attrs="{'invisible': [('xml_file', '=', False)]}">
                            <group>
                                <field name="xml_file" filename="full_file_name"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="ecdf_vat_report_action">
        <field name="name">eCDF VAT Reports</field>
        <field name="res_model">ecdf.vat.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="ecdf_vat_report_menu" parent="l10n_lu.account_reports_lu_statements_menu"
              name="eCDF VAT Reports" action="ecdf_vat_report_action" sequence="101"/>
</odoo>
